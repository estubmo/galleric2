{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "content": {
      "type": "richtext"
    },
    "meta_description": {
      "type": "text"
    },
    "meta_title": {
      "type": "text"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "currency": {
      "type": "enumeration",
      "enum": [
        "USD",
        "EUR",
        "NOK"
      ],
      "default": "EUR",
      "required": true
    },
    "orders": {
      "via": "product",
      "collection": "order"
    },
    "discount": {
      "type": "decimal"
    }
  }
}
